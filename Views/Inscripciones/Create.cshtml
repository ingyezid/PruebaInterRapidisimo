@model PruebaInterRapidisimo.Models.ViewModels.InscripcionViewModel
@using PruebaInterRapidisimo.Models

@{
    var materias = ViewBag.Materias as List<Materia>;
}

<h2>Inscribir Materias</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="EstudianteId" />

    @if (materias != null)
    {
        foreach (var materia in materias)
        {
            <div>
                <input type="checkbox" name="MateriasSeleccionadas" value="@materia.Id" />
                @materia.Nombre - Profesor: @(materia.Profesor != null ? materia.Profesor.Nombres : "Sin profesor") @(materia.Profesor != null ? materia.Profesor.Apellidos : "")
            </div>
        }
    }

    <button type="submit" class="btn btn-primary mt-3">Guardar Inscripción</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div class="mt-3">
    <a asp-controller="Estudiante" asp-action="Index" class="btn btn-secondary">Volver a Estudiantes</a>
</div>