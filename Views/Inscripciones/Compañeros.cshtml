@model IEnumerable<PruebaInterRapidisimo.Models.ViewModels.CompañerosViewModel>

<h2>Compañeros de clase</h2>

@if (!Model.Any())
{
    <p class="text-warning">El estudiante aún no tiene materias inscritas.</p>
}

@foreach (var item in Model)
{
    <div class="card mt-3 p-3">
        <h4>@item.Materia (Profesor: @item.Profesor)</h4>
        <p><strong>Compañeros:</strong></p>
        @if (item.Compañeros.Any())
        {
            <ul>
                @foreach (var nombre in item.Compañeros)
                {
                    <li>@nombre</li>
                }
            </ul>
        }
        else
        {
            <p>No tiene compañeros en esta materia todavía.</p>
        }
    </div>
}

<div class="mt-3">
    <a asp-controller="Estudiante" asp-action="Index" class="btn btn-secondary">Volver a Estudiantes</a>
</div>