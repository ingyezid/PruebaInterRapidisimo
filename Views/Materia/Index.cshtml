
@model IEnumerable<PruebaInterRapidisimo.Models.Materia>

@{
    ViewData["Title"] = "Lista de Materias";
}



<h1> Administrador de Materias </h1>

<p>
    <a asp-action="Create" class="btn btn-primary"> Crear Materia </a>
</p>

<table class="table" id="contenedor1">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.ProfesorId)</th>
            <th>@Html.DisplayNameFor(model => model.Creditos)</th>            
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="9" class="text-center">No hay materias registrados.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProfesorId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Creditos)</td>                    
                    <td>
                        <div class="p-2 d-flex justify-content-between">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Actualizar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
