@model PruebaInterRapidisimo.Models.Materia

@{
    ViewData["Title"] = "Crear Materia";
}

<h2>Crear Materia</h2>
<div class="row p-3" id="contenedor1">
    <form asp-action="Create">
        <div class="row justify-content-center">
            <!-- Columna centrada -->
            <div class="col-md-6 mx-auto">
                
                <div class="form-group">
                    <label asp-for="Nombre" class="fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Creditos" class="fw-bold"></label>
                    <input asp-for="Creditos" class="form-control" />
                    <span asp-validation-for="Creditos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProfesorId" class="fw-bold"></label>
                    <input asp-for="ProfesorId" class="form-control" />
                    <span asp-validation-for="ProfesorId" class="text-danger"></span>
                </div>

            </div>

        </div>

        <div class="form-group d-flex justify-content-around mt-4">
            <input type="submit" value="Guardar" class="btn btn-primary " />
            <a asp-action="Index" class="btn btn-secondary ">Cancelar</a>
        </div>
    </form>
</div>

